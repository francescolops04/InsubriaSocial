<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <Button
        android:id="@+id/buttonBackEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/buttons"
        android:textAllCaps="false"
        android:text="Indietro"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/buttonConfirmEditProfile"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:background="@drawable/buttons"
        android:text="Conferma"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885" />

    <EditText
        android:id="@+id/nomeEP"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:hint="Nome"
        android:singleLine="true"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/user"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282"
        app:layout_constraintHorizontal_bias="0.496" />

    <EditText
        android:id="@+id/cognomeEP"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:hint="Cognome"
        android:singleLine="true"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/user"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nomeEP"
        app:layout_constraintEnd_toEndOf="@+id/nomeEP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/userEP"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:hint="Username"
        android:singleLine="true"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/user"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nomeEP"
        app:layout_constraintEnd_toEndOf="@+id/nomeEP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538"
        app:layout_constraintHorizontal_bias="0.066" />

    <Spinner
        android:id="@+id/spinnerEP"
        android:layout_width="281dp"
        android:layout_height="46dp"
        android:background="@drawable/rounded_corner"
        android:entries="@array/opzioni_spinner_edit"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/userEP"
        app:layout_constraintEnd_toEndOf="@+id/userEP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661"
        app:layout_constraintHorizontal_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>