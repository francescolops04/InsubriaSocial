<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".Login">

    <Button
        android:id="@+id/LogButton"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:text="Accedi"
        android:paddingRight="70dp"
        android:textAllCaps="false"
        android:fontFamily="@font/sfpro2"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/login"
        android:paddingLeft="50dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordL"
        app:layout_constraintVertical_bias="0.283"
        app:layout_constraintHorizontal_bias="0.497" />

    <Button
        android:id="@+id/buttonBackL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indietro"
        android:background="@drawable/buttons"
        android:fontFamily="@font/sfpro2"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintHorizontal_bias="0.021" />

    <EditText
        android:id="@+id/mailL"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawablePadding="7dp"
        android:singleLine="true"
        android:drawableStart="@drawable/mail"
        android:hint="Email"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485"
        app:layout_constraintHorizontal_bias="0.496" />

    <EditText
        android:id="@+id/passwordL"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawablePadding="7dp"
        android:singleLine="true"
        android:drawableStart="@drawable/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.496" />

    <TextView
        android:id="@+id/textViewL"
        android:layout_width="201dp"
        android:layout_height="84dp"
        android:fontFamily="@font/sfpro2"
        android:gravity="center"
        android:text="Login"
        android:textColor="#066858"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"
        app:layout_constraintHorizontal_bias="0.474"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/linkRec"
        android:layout_width="221dp"
        android:layout_height="27dp"
        android:fontFamily="@font/sfpro2"
        android:gravity="center"
        android:text="Hai dimenticato la password?"
        android:textColor="#066858"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>