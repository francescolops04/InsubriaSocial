<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecoveryPassword">

    <Button
        android:id="@+id/buttonRecEP"
        android:layout_width="203dp"
        android:layout_height="58dp"
        android:text="Prosegui"
        android:textAllCaps="false"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:fontFamily="@font/sfpro2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

    <Button
        android:id="@+id/backRecEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indietro"
        android:textAllCaps="false"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:fontFamily="@font/sfpro2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintHorizontal_bias="0.022" />

    <EditText
        android:id="@+id/mailRecEP"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/mail"
        android:hint="Inserisci mail"
        android:singleLine="true"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRecEP"
        app:layout_constraintVertical_bias="0.379"
        app:layout_constraintHorizontal_bias="0.496" />

    <TextView
        android:id="@+id/textViewRecEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recupera la password"
        android:textColor="#066858"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="@font/arial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />

</androidx.constraintlayout.widget.ConstraintLayout>