<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/usernameR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/textViewR"
        android:layout_width="305dp"
        android:layout_height="74dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Registrati"
        android:textColor="#066858"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/nomeR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:hint="Nome"
        android:singleLine="true"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <EditText
        android:id="@+id/cognomeR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:hint="Cognome"
        android:singleLine="true"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381" />

    <EditText
        android:id="@+id/mailR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:hint="Email"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/mail"
        android:fontFamily="@font/sfpro2"
        android:background="@drawable/shape_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478" />

    <Spinner
        android:id="@+id/spinnerR"
        android:layout_width="281dp"
        android:layout_height="46dp"
        android:background="@drawable/rounded_corner"
        android:entries="@array/opzioni_spinner"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <EditText
        android:id="@+id/passwordR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/password"
        android:fontFamily="@font/sfpro2"
        android:background="@drawable/shape_border"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

    <EditText
        android:id="@+id/passwordR2"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/password"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:hint="Conferma password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851" />

    <Button
        android:id="@+id/RegButton"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/sfpro2"
        android:text="Registrati"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/buttonBackR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indietro"
        android:textAllCaps="false"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:fontFamily="@font/sfpro2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

</androidx.constraintlayout.widget.ConstraintLayout>