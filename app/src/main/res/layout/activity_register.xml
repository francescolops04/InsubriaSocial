<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <Button
        android:id="@+id/buttonBackR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:fontFamily="@font/sfpro2"
        android:text="Indietro"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:layout_constraintHorizontal_bias="0.022" />

    <Button
        android:id="@+id/RegButton"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/sfpro2"
        android:text="Registrati"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:layout_constraintHorizontal_bias="0.497" />

    <EditText
        android:id="@+id/mailR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="7dp"
        android:hint="Email"
        android:paddingLeft="15dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cognomeR"
        app:layout_constraintEnd_toEndOf="@+id/cognomeR"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/passwordR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawableStart="@drawable/password"
        android:drawablePadding="7dp"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spinnerR"
        app:layout_constraintEnd_toEndOf="@+id/spinnerR"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/usernameR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawableStart="@drawable/user"
        android:drawablePadding="7dp"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mailR"
        app:layout_constraintEnd_toEndOf="@+id/mailR"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/passwordR2"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawableStart="@drawable/password"
        android:drawablePadding="7dp"
        android:hint="Conferma password"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/passwordR"
        app:layout_constraintEnd_toEndOf="@+id/passwordR"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851"
        app:layout_constraintHorizontal_bias="0.532" />

    <EditText
        android:id="@+id/nomeR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawableStart="@drawable/user"
        android:drawablePadding="7dp"
        android:hint="Nome"
        android:paddingLeft="15dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/cognomeR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_border"
        android:fontFamily="@font/sfpro2"
        android:drawableStart="@drawable/user"
        android:drawablePadding="7dp"
        android:hint="Cognome"
        android:paddingLeft="15dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nomeR"
        app:layout_constraintEnd_toEndOf="@+id/nomeR"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323"
        app:layout_constraintHorizontal_bias="0.495" />

    <TextView
        android:id="@+id/textViewR"
        android:layout_width="305dp"
        android:layout_height="74dp"
        android:fontFamily="@font/sfpro2"
        android:gravity="center"
        android:text="Registrati"
        android:textColor="#066858"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerR"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corner"
        android:entries="@array/opzioni_spinner"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/usernameR"
        app:layout_constraintEnd_toEndOf="@+id/usernameR"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641"
        app:layout_constraintHorizontal_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>